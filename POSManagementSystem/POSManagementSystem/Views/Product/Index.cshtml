@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="content">

@model IEnumerable<POSManagementSystem.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h3>@Html.ActionLink("Create New", "Create")</h3>
<h2>Users List</h2>



    <table cellpadding="0" cellspacing="0" width="100%" class="sortable">
			
				<thead>
					<tr>
						
						<th class="header" style="cursor: pointer; ">Brand Name</th>
                        <th class="header" style="cursor: pointer; ">Product Name</th>
                        <th class="header" style="cursor: pointer; ">Barcode</th>
                        <th class="header" style="cursor: pointer; ">Unit Price</th>  
						<th colspan="3"></th>
					</tr>
				</thead>
				
				<tbody>
                    
@foreach (var item in Model) {
    <tr class="even_@Html.DisplayFor(modelItem => item.productID)">
        <td>
            @Html.DisplayFor(modelItem => item.Brand.brandID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productBarCode)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.productPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.productID }) |
            @Html.ActionLink("Details", "Details", new { id=item.productID }) | 
            <a href="#" id="@Html.DisplayFor(modelItem => item.productID)" class="delete_update" title="Delete"><img src="http://localhost:1587/Content/images/close.png" alt="Delete" title="Delete"/></a>
        </td>
    </tr>
}
				</tbody>
				
			</table>

    <script>
        $(document).ready(function () {

            //Delete Product..

            $('.delete_update').live("click", function () {
                var ID = $(this).attr("id");
                var dataString = 'id=' + ID;
                if (confirm("Sure you want to delete this User? There is NO undo!")) {

                    $.ajax({
                        type: "POST",
                        url: "http://localhost:1587/Product/Delete",
                        data: dataString,
                        cache: false,
                        success: function (html) {
                            $(".even_" + ID).slideUp('slow', function () { $(this).remove(); });
                        }
                    });

                }
                return false;
            });





        });
</script>